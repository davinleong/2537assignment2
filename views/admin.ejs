<%- include("templates/headers") %>
  <h1>Users</h1>
  <h3>Welcome, <%= username %>
  </h3>

  <div class="container-fluid">
    <table class="table table-hover table-centered">
      <thead>
        <tr>
          <th scope="col">Username</th>
          <th scope="col">User Type</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i=0; i < users.length; i++) { %>
          <tr>
            <td>
              <%= users[i].username %>
            </td>
            <td>
              <%= users[i].user_type %>
            </td>
            <td>
              <% if (users[i].user_type==='admin' ) { %>
                <a href="/demote/<%= users[i].username %>">Demote</a>
                <% } else { %>
                  <a href="/promote/<%= users[i].username %>">Promote</a>
                  <% } %>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
    </body>
  </div>

  <%- include("templates/footers") %>

